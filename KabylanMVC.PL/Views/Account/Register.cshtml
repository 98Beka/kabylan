@model KabylanMVC.PL.ViewModels.RegisterModel
 @{
    ViewData["Title"] = "View";

}

 
<div class="login my-5 py-5">
    <div class="my-5 py-5 text-center">

        <h2>Регистрация</h2>
 
        <br />
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email">Введите Email</label>
                <br />
                <input type="text" class="form-control text-center" asp-for="Email" required/>
                <span asp-validation-for="Email" />
            </div>
            <br />
            <div>
                <label asp-for="Password">Введите пароль</label>
                <br />
                <input asp-for="Password" class="form-control text-center" required/>
                <span asp-validation-for="Password" />
            </div>
            <br />
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label>
                <br />
                <input asp-for="ConfirmPassword" class="form-control text-center" required/>
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <br />
            <br />
            <div>
                <input type="submit" value="Получить код" class="btn btn-outline-primary w-100" />
            </div>
        </form>
    </div>
</div>