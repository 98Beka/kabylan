@model KabylanMVC.PL.ViewModels.LoginModel
 
<div class="login my-5 py-5">


    <div class="my-5 py-5 text-center">

    <h2>Вход на сайт</h2>
    <br />
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label>
                <br />
                <input type="text" class="form-control text-center" asp-for="Email" required />
                <span asp-validation-for="Email" />
            </div>
            <br>           
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <br />
                <input asp-for="Password" class="form-control text-center" required/>
                <span asp-validation-for="Password" />
            </div>
            <br>
            <br>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-primary w-100" />
            </div>
        </div>
    </form>
    <br />
    <a asp-action="Register" asp-controller="Account">Регистрация</a>
    </div>
</div>